---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/contactus/ContactForm.astro';
---

<Layout title="Contact Us">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Get in Touch</h1>
      <p class="text-gray-600">Have questions? We'd love to hear from you.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h2 class="text-2xl font-bold mb-4">Contact Information</h2>
        <div class="space-y-4">
          <div class="flex items-start">
            <svg class="h-6 w-6 text-purple-700 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div>
              <h3 class="font-semibold">Email</h3>
              <p class="text-gray-600">support@softwarecareer.com</p>
            </div>
          </div>
          <div class="flex items-start">
            <svg class="h-6 w-6 text-purple-700 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              <h3 class="font-semibold">Location</h3>
              <p class="text-gray-600">San Francisco, CA</p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-lg">
        <ContactForm />
      </div>
    </div>
  </div>
</Layout>