    }
   
];
const pricingPlans = [
    {
        title: "Full-Stack Development",
        price: "£50",
        description: "high in demand  ",
        features: [
            "1:1 sessions",
            "Practical Projects",
            "Offer Certification"
        ]
    },
    {
        title: "AI and Machine Learning",
        price: "£55",
        description: "Best Course To Build Your Software Career",
        features: [
         "1:1 sessions",
            "Practical Projects",
